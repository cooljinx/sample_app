<% if signed_in? %>
	<table class="front" summary="For signed-in users">
		<tr>
		<td class="main">
			<h1 class="micropost">What's up?</h1>
			<%= render 'shared/micropost_form' %>
			<%= render 'shared/feed' %>
		</td>
		<td class="sidebar round">
			<%= render 'shared/user_info' %>
			<%= render 'shared/stats' %>
			</td>
		</tr>
	</table>
<% else %>
	<h1>Social WebApp</h1>
	<p>
		This is a sample application developed by <a href="https://github.com/cooljinx">Gopi</a> with Ruby on Rails.
	</p>
	<p>All tests done with RSpec, with SQLite3 for database support and the Prototype library for Ajax.</p>
	
	<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>